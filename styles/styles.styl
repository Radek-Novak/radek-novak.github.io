html, body {
  height: 100%;
}
body {
  text-align: center;
  margin: 0;
}
main {
  position: relative;
  top: 50%;
  transform: translateY(-50%);
}
nav
  h1
    display none
    
.name {
  font-family: Abril Fatface;
  font-size: 40px;
  margin: 0;
  font-weight: normal;
}
.role {
  font-family: Playfair Display;
  font-style: italic;
  margin: 15px 0;
  a {
    font-style: normal;
  }
}
.links {
  position: fixed;
  bottom: 5px;
  text-align: center;
  width: 100%;
}

a
  font-family: Playfair Display;
  text-decoration: none;
  color: inherit;
  text-transform: uppercase;

.out {
  border: 1px solid transparent;
  position: relative;

  &:hover:before {
    //text-decoration: underline;
    border: 1px solid black;
    border-top: 0;
    content: '';
    display: inline-block;
    position: absolute;
    height: 3px;
    width: 100%;
    bottom: 0;
    left: -1px;
  }
}
.header
  position fixed
  top 0
  left 0
  width 100%

.in
  &:hover
    &:before
      content '<'
      border 0
    &:after
      content '>'

.stuff {
  position: fixed;
  bottom: 5px;
  right: 5px;
}
